}{}

\DeclareFontShape{T1}{uop}{m}{sl}{
      <-> ssub * uop/m/it
}{}

\DeclareFontShape{T1}{uop}{bx}{sl}{
      <-> ssub * uop/b/sl
}{}

\DeclareFontShape{T1}{uop}{bx}{n}{
      <-> ssub * uop/b/n
}{}

\DeclareFontShape{T1}{uop}{bx}{it}{
      <-> ssub * uop/b/it
}{}

\DeclareFontShape{T1}{uop}{b}{sc}{
   <-> \URWClassico@@scale uopbc8t
}{}

\DeclareFontShape{T1}{uop}{m}{sc}{
