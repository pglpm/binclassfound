    [2014/08/02 Font definitions for T1/uop.]

\expandafter\ifx\csname URWClassico@scale\endcsname\relax
    \let\URWClassico@@scale\@empty
\else
    \edef\URWClassico@@scale{s*[\csname URWClassico@scale\endcsname]}%
\fi

\DeclareFontFamily{T1}{uop}{}

\DeclareFontShape{T1}{uop}{b}{n}{
      <-> \URWClassico@@scale URWClassico-Bold-lf-t1
}{}

\DeclareFontShape{T1}{uop}{b}{it}{
      <-> \URWClassico@@scale URWClassico-BoldItalic-lf-t1
}{}

\DeclareFontShape{T1}{uop}{b}{sl}{
      <-> ssub * uop/b/it
}{}

\DeclareFontShape{T1}{uop}{m}{n}{
      <-> \URWClassico@@scale URWClassico-Regular-lf-t1
}{}

\DeclareFontShape{T1}{uop}{m}{it}{
